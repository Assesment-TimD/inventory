<%- include('../../layout/header.ejs')%>

    <div id="content">
        <h2>Welcome to the Product Page</h2>
        <a href="/admin/create_product" class="button-create"><i class="fa-solid fa-plus"></i> Create</a>
        <table>
            <thead>
                <tr>
                    <th>No</th>
                    <th>ID</th>
                    <th>Product Name</th>
                    <th>Category</th>
                    <th>Price</th>
                    <th>Qty</th>
                    <th>Product Status</th>
                    <th>Brand</th>
                    <th>Supplier</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                <% let nomor = 1; %>
                <% if(product.length > 0 ){
                    for(let i = 0; i <product.length; i++){
                         %>
                <tr>
                   <td><%= nomor++ %></td> 
                  <td><%= product[i]['id'] %></td>
                  <td><%= product[i]['product'] %></td>
                  <td><%= product[i]['category'] %></td>
                  <td><%= product[i]['price'] %></td>
                  <td><%= product[i]['qty'] %></td>
                  <td><%= product[i]['status'] %></td>
                  <td><%= product[i]['brand'] %></td>
                  <td><%= product[i]['supplier'] %></td>
                  <td>
                    <a href="/update_product/<%= product[i]['id'] %>" class="button-edit"id="kolom5" >Update</a>
                    <a href="/delete_product/<%= product[i]['id'] %>" class="button-hapus" id="kolom6">Delete</a>  
                </td>
                    </tr>
                  </tr>
                </tr>
                <%}}%>
            </tbody>
        </table>
    </div>

    <%- include('../../layout/footer.ejs') %>